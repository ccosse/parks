    <link rel="stylesheet" type="text/css" href="/static/pacdev/css/pacdev.css">
    <script type="text/javascript">
        window.orientation=null;
        window.counter=0;
        window.onresize=function(e){

        var AR=(1.0*window.innerWidth)/(1.0*window.innerHeight);
        var h_nav=document.getElementById("le_nav").getBoundingClientRect().height;
        document.getElementById("debug").innerHTML+=window.innerWidth+"x"+window.innerHeight+" "+AR+"<br>";
        if(window.innerWidth<768){
          if(window.orientation!="portrait"){
            //setup portrait
            //$("#controls").css("left",0);
            //$("#controls").css("height",(window.innerHeight-h_nav));
            $("#controls").removeClass("myhide");
            $("#controls").removeClass("landscape");
            $("#controls").addClass("portrait");
            $("#controls").addClass("vhide");


            window.orientation="portrait";
          }
        }
        else{
          if(window.orientation!="landscape"){
            //setup landscape
            $("#controls").css("height",(window.innerHeight-h_nav));
            $("#controls").removeClass("vhide");
            $("#controls").removeClass("portrait");
            $("#controls").addClass("landscape");

            window.orientation="landscape";
          }
        }

        $("#mapdiv").css("top",h_nav);
        $("#mapdiv").css("height",(window.innerHeight-h_nav));

        $("#tb").click(function(e){
          window.counter+=1;
          if(window.orientation=="portrait"){
            document.getElementById("debug").innerHTML+="<br>toggling vhide:"+window.counter+"<br>"+e.type;
            $("#controls").toggleClass("vhide");
          }
          else {
            document.getElementById("debug").innerHTML+="<br>toggling myhide:"+window.counter+"<br>"+e.type;
            $("#controls").toggleClass("myhide");
          }
        });
      }
      function init(e){
        console.log('init');
        window.onresize(null);
      }

    </script>
  </head>
